@using DomainModule.Models
@model DomainModule.Models.CartModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    string GetCategoryName(CategoryModel category)
    {
        return category.Name switch
        {
            "Laptop" => "Ноутбуки",
            "Smartphone" => "Смартфоны",
            "Tablet" => "Планшеты",
            _ => "Неизвестно"
        };
    }
}
